# Override para hacer backup antes de detener
down:
	@echo "ğŸ“¦ Backup previo a apagar contenedores..."
	@$(MAKE) backup
	@echo "ğŸ”» Apagando contenedores..."
	@$(MAKE) _down

restart:
	@echo "ğŸ“¦ Backup previo a reiniciar..."
	@$(MAKE) backup
	@echo "ğŸ” Reiniciando servicios..."
	@$(MAKE) _restart

ritual:
	@echo "ğŸ“¦ Backup previo al ritual..."
	@$(MAKE) backup
	@echo "ğŸª„ Ejecutando ritual completo..."
	@$(MAKE) _ritual
